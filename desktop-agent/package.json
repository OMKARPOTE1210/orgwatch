{
  "name": "orgwatch-agent",
  "version": "2.0.0",
  "description": "OrgWatch Enterprise Security Agent",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.orgwatch.agent",
    "productName": "OrgWatch Agent",
    "files": [
      "dist/**/*",
      "main.js",
      "service/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "service/",
        "to": "service/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
