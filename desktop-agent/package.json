{
  "name": "orgwatch-agent",
  "version": "2.0.0",
  "description": "OrgWatch Secure Endpoint Agent",
  "main": "main.js",
  "author": "OrgWatch Security",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "compile-python": "python build_installer.py",
    "dist": "npm run build && npm run compile-python && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^12.24.10",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "javascript-obfuscator": "^4.1.0",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.orgwatch.agent",
    "productName": "OrgWatch Agent",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/orgwatch_daemon.exe",
        "to": "orgwatch_daemon.exe"
      },
      {
        "from": "service/rules.yar",
        "to": "rules.yar"
      },
      {
        "from": "service/malware_model.pkl",
        "to": "malware_model.pkl"
      },
      {
        "from": "service/phishing_model.pkl",
        "to": "phishing_model.pkl"
      },
      {
        "from": "service/behavior_model.pkl",
        "to": "behavior_model.pkl"
      },
      {
        "from": "service/nids_model.pkl",
        "to": "nids_model.pkl"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}
